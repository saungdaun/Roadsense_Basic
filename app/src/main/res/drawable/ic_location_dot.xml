<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer white ring -->
    <item>
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Blue core -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/location_blue" />
        </shape>
    </item>
    <!-- Inner white dot (opsional, untuk efek "pupil") -->
    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>