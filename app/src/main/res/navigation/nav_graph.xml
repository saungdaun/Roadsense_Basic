<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/survey">

    <!-- Survey Fragment -->
    <fragment
        android:id="@+id/survey"
        android:name="zaujaani.roadsense.ui.survey.Survey"
        android:label="Survey"
        tools:layout="@layout/fragment_survey" />

    <!-- Data Fragment -->
    <fragment
        android:id="@+id/data"
        android:name="zaujaani.roadsense.ui.data.Data"
        android:label="Data"
        tools:layout="@layout/fragment_data" />

    <!-- Reports Fragment -->
    <fragment
        android:id="@+id/reports"
        android:name="zaujaani.roadsense.ui.report.Reports"
        android:label="Reports"
        tools:layout="@layout/fragment_reports" />

    <!-- Calibrations Fragment -->
    <fragment
        android:id="@+id/calibrations"
        android:name="zaujaani.roadsense.ui.calibration.Calibrations"
        android:label="Calibrations"
        tools:layout="@layout/fragment_calibrations" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settings"
        android:name="zaujaani.roadsense.ui.settings.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <!-- Action dari Settings ke Help -->
        <action
            android:id="@+id/action_settings_to_help"
            app:destination="@id/help" />
    </fragment>

    <!-- Help Fragment (hanya bisa diakses dari Settings) -->
    <fragment
        android:id="@+id/help"
        android:name="zaujaani.roadsense.ui.help.Help"
        android:label="Help"
        tools:layout="@layout/fragment_help" />

</navigation>