<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <!-- Header Row: Road Name + Confidence -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_medium">

            <TextView
                android:id="@+id/tvRoadName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jl. Contoh"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_medium"
                android:paddingVertical="@dimen/margin_small"
                android:text="TINGGI"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/confidence_high_bg" />

        </LinearLayout>

        <!-- Condition & Surface Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                app:chipBackgroundColor="@color/condition_good"
                app:chipStrokeWidth="0dp"
                android:text="@string/good"
                android:textColor="@color/white"
                app:chipCornerRadius="@dimen/chip_corner_radius" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/surface_asphalt"
                app:chipStrokeWidth="0dp"
                android:text="@string/asphalt"
                android:textColor="@color/white"
                app:chipCornerRadius="@dimen/chip_corner_radius" />

        </LinearLayout>

        <!-- Info Grid: 3 columns (Distance, Speed, Vibration) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jarak"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 m"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 km/h"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/speed_low" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Getaran"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 g"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/vibration_smooth" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second Info Row: Severity + GPS + Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keparahan"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/10"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/severity_none" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvGpsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/gps_poor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Feb, 14:30"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </LinearLayout>

        <!-- Segment Count & Data Source -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_medium">

            <TextView
                android:id="@+id/tvSegmentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/gray_100"
                android:paddingHorizontal="@dimen/margin_medium"
                android:paddingVertical="@dimen/margin_small"
                android:text="2 segmen"
                android:textSize="@dimen/text_xsmall"
                android:textColor="@color/secondary_text"
                android:layout_marginEnd="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tvDataWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="⚠️ Data hanya dari GPS"
                android:textSize="@dimen/text_xsmall"
                android:textColor="@color/warning_orange"
                android:layout_marginEnd="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tvDataSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sumber: Sensor ESP32"
                android:textSize="@dimen/text_xsmall"
                android:textColor="@color/secondary_text"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- Action Buttons (Tanpa icon) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExport"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_export"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_edit"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_delete"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>