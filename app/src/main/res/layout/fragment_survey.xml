<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    tools:context=".ui.survey.SurveyFragment">

    <!-- Main ScrollView Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>

            <!-- Status Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Bluetooth Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bluetooth_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_bluetooth"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_bluetooth_24"
                            android:tint="@color/disconnected_red"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/text_bluetooth_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bluetooth_disconnected"
                            android:textSize="12sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- GPS Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_gps_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_gps"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_gps_24"
                            android:tint="@color/disconnected_red"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/text_gps_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gps_inactive"
                            android:textSize="12sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Survey Data Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Survey Data"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>

            <!-- Surface Type Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_surface_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_road_24"
                            android:tint="@color/primary"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Surface Type"
                            android:textSize="16sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/text_surface_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select"
                            android:textSize="13sp"
                            android:textColor="@color/gray_500"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <!-- Selected Surface Display (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/layout_surface_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/bg_selected_surface"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp">

                        <View
                            android:id="@+id/indicator_surface"
                            android:layout_width="4dp"
                            android:layout_height="32dp"
                            android:background="@color/asphalt_blue"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/text_surface_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Aspal"
                            android:textSize="16sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_24"
                            android:tint="@color/connected_green"/>

                    </LinearLayout>

                    <!-- Surface Options (Expandable) -->
                    <LinearLayout
                        android:id="@+id/layout_surface_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Aspal Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_surface_aspal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/asphalt_blue"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Aspal"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Asphalt surface"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_road_variant_24"
                                    android:tint="@color/asphalt_blue"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Beton Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_surface_beton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/concrete_gray"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Beton"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Concrete surface"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_texture_24"
                                    android:tint="@color/concrete_gray"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Tanah Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_surface_tanah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/earth_brown"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tanah"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Earth/unpaved surface"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_terrain_24"
                                    android:tint="@color/earth_brown"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Road Condition Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_road_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_assessment_24"
                            android:tint="@color/primary"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Road Condition"
                            android:textSize="16sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/text_condition_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select"
                            android:textSize="13sp"
                            android:textColor="@color/gray_500"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <!-- Selected Condition Display (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/layout_condition_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/bg_selected_condition"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp">

                        <View
                            android:id="@+id/indicator_condition"
                            android:layout_width="4dp"
                            android:layout_height="32dp"
                            android:background="@color/good_green"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/text_condition_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Good"
                            android:textSize="16sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_24"
                            android:tint="@color/connected_green"/>

                    </LinearLayout>

                    <!-- Condition Options (Expandable) -->
                    <LinearLayout
                        android:id="@+id/layout_condition_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Good Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_condition_good"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/good_green"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Good"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Excellent condition"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_sentiment_satisfied_24"
                                    android:tint="@color/good_green"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Fair Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_condition_fair"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/fair_yellow"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fair"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Minor wear visible"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_sentiment_neutral_24"
                                    android:tint="@color/fair_yellow"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Light Damage Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_condition_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/light_damage_orange"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Light Damage"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Some cracks/potholes"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_warning_24"
                                    android:tint="@color/light_damage_orange"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Heavy Damage Option -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_condition_heavy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/gray_300"
                            app:cardBackgroundColor="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="@color/heavy_damage_red"
                                    android:layout_marginEnd="16dp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Heavy Damage"
                                        android:textSize="16sp"
                                        android:textColor="@color/gray_900"
                                        android:fontFamily="sans-serif-medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Severe deterioration"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray_500"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_report_problem_24"
                                    android:tint="@color/heavy_damage_red"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Survey Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_survey_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Survey Information"
                        android:textSize="14sp"
                        android:textColor="@color/gray_900"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp"/>

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Distance"
                            android:textSize="13sp"
                            android:textColor="@color/gray_700"/>

                        <TextView
                            android:id="@+id/text_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 km"
                            android:textSize="13sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duration"
                            android:textSize="13sp"
                            android:textColor="@color/gray_700"/>

                        <TextView
                            android:id="@+id/text_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textSize="13sp"
                            android:textColor="@color/gray_900"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar with FAB -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="8dp"
        app:fabCradleRoundedCornerRadius="16dp"
        app:fabCradleVerticalOffset="8dp"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        app:backgroundTint="@color/white"
        app:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Status Text -->
            <TextView
                android:id="@+id/text_survey_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/status_ready"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_survey_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_24"
        app:tint="@color/white"
        app:backgroundTint="@color/primary"
        app:layout_anchor="@id/bottom_app_bar"
        app:maxImageSize="32dp"
        app:fabSize="normal"
        android:contentDescription="Start Survey"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>