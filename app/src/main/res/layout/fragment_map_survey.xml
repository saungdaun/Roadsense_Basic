<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".features.map.MapSurveyFragment">

    <!-- Map View (OSM) -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- ===== STATUS PANEL ATAS ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/surface_container"
        app:cardCornerRadius="@dimen/status_panel_corner_radius"
        app:cardElevation="@dimen/elevation_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Baris 1: Device, GPS, Fusion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/status_ready"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold"
                    android:background="@color/status_ready"
                    tools:background="@color/status_ready" />

                <TextView
                    android:id="@+id/tvGpsStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/gps_unavailable"
                    android:textColor="@color/gps_none"
                    android:textSize="@dimen/text_small"
                    tools:text="ðŸ“ GPS: Â±5m" />

                <TextView
                    android:id="@+id/tvFusionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/fusion_inactive"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Fusion: 120m" />
            </LinearLayout>

            <!-- Baris 2: ESP32 & Packet Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/esp32_disconnected"
                    android:textColor="@color/disconnected_red"
                    android:textSize="@dimen/text_small"
                    tools:text="ESP32: âœ… Connected" />

                <TextView
                    android:id="@+id/tvPacketInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/packet_info_default"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/text_small"
                    tools:text="Packets: 128 | Errors: 0" />
            </LinearLayout>

            <!-- Baris 3: Battery & Temperature (opsional) -->
            <LinearLayout
                android:id="@+id/layoutBatteryTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvBattery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/battery_default"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/text_xsmall"
                    tools:text="ðŸ”‹ 3.8V" />

                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/temperature_default"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/text_xsmall"
                    tools:text="ðŸŒ¡ï¸ 32Â°C" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== Z-AXIS INDICATOR (COMPOUND DRAWABLE) ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/zAxisCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/status_panel_corner_radius"
        app:cardElevation="@dimen/elevation_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusCard">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <!-- âœ… TextView dengan compound drawable (lingkaran) â€“ warna diatur via kode -->
            <TextView
                android:id="@+id/tvZAxisStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/circle_indicator"
                android:drawablePadding="@dimen/spacing_small"
                android:text="@string/vibration_default"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                android:gravity="center_vertical"
                tools:drawableTint="@color/good_green"
                tools:text="âœ… Valid - Siap merekam" />

            <!-- âœ… Confidence message / warning -->
            <TextView
                android:id="@+id/tvZAxisMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text=""
                android:textColor="@color/gray_700"
                android:textSize="@dimen/text_xsmall"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Confidence: 85%" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== RECORDING / PAUSED / RECONNECTING ===== -->
    <TextView
        android:id="@+id/tvRecordingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:paddingVertical="@dimen/spacing_small"
        android:text="@string/status_recording"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:background="@color/stop_red"
        tools:text="RECORDING" />

    <!-- ===== BOTTOM PANEL ===== -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <!-- Tombol Add Survey & Center Map -->
    <LinearLayout
        android:id="@+id/btnAddSurveyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddSurvey"
            style="@style/Widget.Roadsense.Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/spacing_small"
            android:enabled="false"
            android:text="@string/btn_add_survey"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_small"
            tools:enabled="true"
            tools:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCenterMap"
            style="@style/Widget.Roadsense.Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_center_map"
            app:icon="@drawable/ic_center_map"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_small" />
    </LinearLayout>

    <!-- Data Card (Speed, Distance, Vibration) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dataCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/surface_container"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/elevation_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddSurveyContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_medium"
            android:weightSum="3">

            <!-- Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_label"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/text_xsmall" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_default"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="25.3 km/h" />
            </LinearLayout>

            <!-- Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance_label"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/text_xsmall" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance_default"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="1.24 km" />
            </LinearLayout>

            <!-- Vibration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibration_label"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/text_xsmall" />

                <TextView
                    android:id="@+id/tvVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibration_default"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="Z: 1.23g" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== CONTROL BUTTONS (VERTICAL) ===== -->
    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusCard">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStop"
            style="@style/Widget.Roadsense.Button"
            android:layout_width="@dimen/map_button_size"
            android:layout_height="@dimen/map_button_size"
            android:layout_marginBottom="@dimen/spacing_small"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_start"
            app:icon="@drawable/ic_play_arrow"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_small"
            tools:text="START"
            tools:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPauseResume"
            style="@style/Widget.Roadsense.Button"
            android:layout_width="@dimen/map_button_size"
            android:layout_height="@dimen/map_button_size"
            android:enabled="false"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_pause"
            app:icon="@drawable/ic_pause"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_small"
            tools:enabled="true"
            tools:text="PAUSE"
            tools:iconTint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>